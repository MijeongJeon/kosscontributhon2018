{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "esnext"],
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "baseUrl": "./",
    "paths": {
      "*": ["cloud/*"]
    },
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "include": [
    "cloud"
  ]
}
